		</style>
        <script>
            const sections = [
                { id: 'home', linkIndex: 0 },
                { id: 'research', linkIndex: 1 },
                { id: 'experience', linkIndex: 2 },
                { id: 'contact', linkIndex: 3 },
            ];

            const nav = document.querySelector('.nav');
            const links = nav ? Array.from(nav.querySelectorAll('a')) : [];

            // Active section highlight
            if ('IntersectionObserver' in window && links.length) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach((entry) => {
                        const idx = sections.findIndex(s => s.id === entry.target.id);
                        if (idx !== -1) {
                            const link = links[sections[idx].linkIndex];
                            if (entry.isIntersecting) {
                                link.classList.add('active');
                            } else {
                                link.classList.remove('active');
                            }
                        }
                    });
                }, { rootMargin: '-35% 0px -55% 0px', threshold: 0.1 });

                sections.forEach(s => {
                    const el = document.getElementById(s.id);
                    if (el) observer.observe(el);
                });
            }

            // Hotkeys 1-4
            window.addEventListener('keydown', (e) => {
                const activeEl = document.activeElement;
                if (activeEl && ['INPUT', 'TEXTAREA'].includes(activeEl.tagName)) return;
                const keyToIndex = new Map([ ['1', 0], ['2', 1], ['3', 2], ['4', 3] ]);
                const idx = keyToIndex.get(e.key);
                if (idx !== undefined && links[idx]) {
                    e.preventDefault();
                    links[idx].click();
                }
            });
        </script>
